# ============================================================
# WHATSAPP PAYMENT PLATFORM - Environment Variables
# ============================================================

# Server
NODE_ENV=production
PORT=3001
FRONTEND_URL=http://localhost:3000

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_min_32_chars
JWT_EXPIRES_IN=24h

# PostgreSQL
DATABASE_URL=postgresql://fiberperu:password@postgres:5432/whatsapp_payments
DB_HOST=postgres
DB_PORT=5432
DB_NAME=whatsapp_payments
DB_USER=fiberperu
DB_PASSWORD=your_secure_password

# WhatsApp Business API (Meta)
WHATSAPP_TOKEN=your_permanent_whatsapp_token
WHATSAPP_PHONE_ID=your_phone_number_id
WHATSAPP_VERIFY_TOKEN=your_custom_verify_token
WHATSAPP_APP_SECRET=your_app_secret_for_signature_verification

# WispHub CRM
WISPHUB_API_URL=https://api.wisphub.app/api
WISPHUB_API_TOKEN=your_wisphub_api_token
WISPHUB_COMPANY_ID=your_company_id

# Python OCR Service (internal)
OCR_SERVICE_URL=http://python-ocr:8085

# OpenAI (for intent detection)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini

# File storage
UPLOADS_DIR=/app/uploads
MAX_FILE_SIZE_MB=10

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100
