# ============================================================
# FiberPeru WhatsApp Platform v2.0 - Environment Variables
# Copy to .env and fill in all values
# ============================================================

# ── Docker / Infrastructure ─────────────────────────────────
DB_PASSWORD=FiberPeru2024!

# ── WhatsApp Business API (Meta) ─────────────────────────────
WHATSAPP_TOKEN=your_permanent_whatsapp_token_here
WHATSAPP_PHONE_ID=your_phone_number_id_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_VERIFY_TOKEN=fiberperu_webhook_verify_2024
WHATSAPP_APP_SECRET=your_app_secret_for_signature_verification

# ── WispHub CRM ────────────────────────────────────────────
WISPHUB_API_URL=https://api.wisphub.app/api
WISPHUB_API_TOKEN=your_wisphub_api_token_here
WISPHUB_COMPANY_ID=your_company_id

# ── OpenAI (intent detection - optional) ────────────────────
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# ── JWT ────────────────────────────────────────────────────
JWT_SECRET=change_this_to_a_random_64_char_string_for_production
JWT_EXPIRES_IN=24h

# ── Frontend URLs (use your domain/IP in production) ────────
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001

# ── Python OCR legacy settings ──────────────────────────────
ANTHROPIC_API_KEY=your_anthropic_api_key_here
